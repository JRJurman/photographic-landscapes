<html lang='en'>
	<head>
		{{> pl-calendar}}
		{{> styles}}
		{{> meta}}
		<title>Photographic Landscapes - Shows</title>
	</head>
	<style>
		section {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 1em;
		}
		img {
			width: 100%;
		}


	</style>
	<body>
		{{> header}}
		{{> nav}}
		<section>
			{{#each events}}
				<div>
					<h2>{{this.title}}</h2>
					<i>{{this.startDate}} - {{this.endDate}}</i>
					{{{this.description}}}
					<img src='{{this.photo.file}}' alt='{{this.photo.description}}' />
					{{#each this.calendars}}
						<pl-calendar month="{{this.month}}" year="{{this.year}}" start="{{this.start}}" end="{{this.end}}"></pl-calendar>
					{{/each}}
				</div>
			{{/each}}
		</section>
	</body>
</html>
